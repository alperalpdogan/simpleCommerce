@model List<ProductSummaryModel>

@{
    ViewData["Title"] = "Home Page";
}


@foreach (var product in Model)
{
    <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@product.MainPicture.Url" class="card-img-top">
                    <div class="card-body">
                        <div class="clearfix mb-3">
                            <span class="float-start badge rounded-pill bg-primary">@product.Name</span>
                            <span class="float-end price-hp">@product.SalePrice</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}